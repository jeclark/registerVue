{
  "name": "toolkit",
  "version": "1.0.0",
  "description": "12ftguru Vue Starter",
  "author": "Bryan P Johnson <bryan@12ftguru.com>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "lint-staged",
    "test": "NODE_ENV=test ./node_modules/.bin/jest"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
      "git add"
    ],
    "*.css": ["prettier --write", "stylelint", "git add"]
  },
  "jest": {
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js",
      "~/(.*)/([^/]+)$": "<rootDir>/$1/$2"
    },
    "moduleFileExtensions": ["js", "vue"],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    }
  },
  "dependencies": {
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "nuxt": "^1.0.0-rc11",
    "prettier": "^1.7.4",
    "stylelint": "^8.2.0",
    "stylelint-config-recommended": "^1.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.2.0",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.2.1",
    "jest-vue-preprocessor": "^1.3.1",
    "vue-test-utils": "^1.0.0-beta.3"
  }
}
